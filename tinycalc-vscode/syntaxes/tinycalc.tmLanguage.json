{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "TinyCalc",
  "scopeName": "source.tinycalc",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.tinycalc",
          "match": "//.*$"
        },
        {
          "name": "comment.block.tinycalc",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.tinycalc",
          "match": "\\b(var|variable|set)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.tinycalc",
          "match": "\\b\\d+(?:\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.tinycalc",
          "match": "[+\\-*/]"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.terminator.tinycalc",
          "match": ";"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.tinycalc",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
