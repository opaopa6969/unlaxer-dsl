{
  "name": "tinycalc-lsp",
  "displayName": "TinyCalc DSL (LSP)",
  "description": "VS Code extension for the TinyCalc DSL backed by a Java LSP server generated by unlaxer-dsl.",
  "version": "0.1.0",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:tinycalc"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "tinycalc",
        "aliases": [
          "TinyCalc",
          "tinycalc"
        ],
        "extensions": [
          ".tcalc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tinycalc",
        "scopeName": "source.tinycalc",
        "path": "./syntaxes/tinycalc.tmLanguage.json"
      }
    ],
    "debuggers": [
      {
        "type": "tinycalc",
        "label": "TinyCalc Debug",
        "languages": ["tinycalc"],
        "configurationAttributes": {
          "launch": {
            "required": ["program"],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the .tcalc file to parse and run.",
                "default": "${file}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Pause before running (shows source in editor).",
                "default": false
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "tinycalc",
            "request": "launch",
            "name": "Debug TinyCalc File",
            "program": "${file}",
            "stopOnEntry": false
          }
        ],
        "configurationSnippets": [
          {
            "label": "TinyCalc: Launch",
            "description": "Parse and validate a TinyCalc file.",
            "body": {
              "type": "tinycalc",
              "request": "launch",
              "name": "${1:Debug TinyCalc File}",
              "program": "^\"\\${file}\""
            }
          }
        ]
      }
    ],
    "configuration": {
      "title": "TinyCalc LSP",
      "properties": {
        "tinycalcLsp.server.javaPath": {
          "type": "string",
          "default": "java",
          "description": "Java executable to launch the language server."
        },
        "tinycalcLsp.server.jarPath": {
          "type": "string",
          "default": "",
          "description": "Path to the TinyCalc LSP server jar. If empty, the bundled jar is used."
        },
        "tinycalcLsp.server.jvmArgs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Extra JVM arguments (e.g. -Xmx256m)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.5",
    "@vscode/vsce": "^2.26.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
