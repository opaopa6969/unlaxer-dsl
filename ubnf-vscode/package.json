{
  "name": "ubnf-lsp",
  "displayName": "UBNF (LSP)",
  "description": "VS Code extension for UBNF files backed by a Java LSP server generated by unlaxer-dsl.",
  "version": "0.1.0",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:ubnf"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ubnf",
        "aliases": [
          "UBNF",
          "ubnf"
        ],
        "extensions": [
          ".ubnf"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ubnf",
        "scopeName": "source.ubnf",
        "path": "./syntaxes/ubnf.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "UBNF LSP",
      "properties": {
        "ubnfLsp.server.javaPath": {
          "type": "string",
          "default": "java",
          "description": "Java executable to launch the language server."
        },
        "ubnfLsp.server.jarPath": {
          "type": "string",
          "default": "",
          "description": "Path to the UBNF LSP server jar. If empty, the bundled jar is used."
        },
        "ubnfLsp.server.jvmArgs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Extra JVM arguments (e.g. -Xmx256m)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.5",
    "@vscode/vsce": "^2.26.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
